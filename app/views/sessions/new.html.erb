<div>Log in</div>
<%= form_with model: @user, url: session_path do |form| %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <%= form.submit "Log in" %>
<% end %>

<%= link_to "Forgot your password?", new_password_reset_path %>